{% set headline = content.headline ?? null %}
{% set text = content.text ?? null %}

{% set serviceCategories = craft.categories
        .group("serviceCategory")
        .all()
    %}


<section class="px-5">
   <div class="container-fluid bg-petrol rounded-5 px-5 text-white">
      <div class="container py-7">
         <div class="row pb-7">
            <div class="col-6">
               <h3 class="h1">{{ headline }}</h3>
            </div>
            <div class="col-6">
               <p{{ text }}</p>
            </div>
         </div>
      </div>
   </div>
   <div class="container mt-n7 px-5">
      <div class="row mt-n7">
      {% for category in serviceCategories %}
      {% set services = craft.entries.section('services').relatedTo(category).all %}
         <div class="col-4">
            <div class="bg-dark rounded-5 p-5 text-white">
               <h4>{{ category.title }}</h4>
               <div class="pt-4">
                {% for service in services %}
                    <span class="d-block">{{ service.title }}</span>
                {% endfor %}
               </div>
            </div>
         </div>
         {% endfor %}
        
      </div>
   </div>
</section>